<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testfinal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/resto"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:noHistory="true"
        android:roundIcon="@mipmap/resto"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.GagneActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape"/>


        <activity android:name=".activities.JouerActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape"/>

        <activity android:name=".activities.DivertissementActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape"/>

        <activity android:name=".activities.ConnexionActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape"/>

        <activity android:name=".activities.MainActivityOn"
            android:configChanges="orientation"
            android:screenOrientation="landscape"/>

        <activity android:name=".activities.MenuActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape"/>

        <activity android:name=".activities.CommandeActivity"
            android:configChanges="orientation"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="landscape"/>

        <activity android:name=".activities.CommandeActivityOff"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation"
            android:screenOrientation="landscape"/>

        <activity android:name=".activities.MenuActivityOff"
            android:configChanges="orientation"
            android:screenOrientation="landscape"/>

        <activity android:name=".activities.HistoriqueActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape"/>

        <activity android:name=".activities.InfosRestaurantActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape"/>

        <activity android:name=".activities.SelectionRepasActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape"/>


        <activity android:name=".activities.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>