<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_margin="5.5dp"
    app:cardCornerRadius="3dp"
    android:layout_height="40dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:layout_gravity="center"
        android:background="@color/black">


        <TextView
            android:id="@+id/nom_plat_liste"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center|start"
            android:text="@string/defaut"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/qte_selected"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="270dp"

            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/defaut"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/portion_selected"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/nom_plat_liste"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginEnd="260dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="@string/defaut"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/price_selected"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/nom_plat_liste"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="112dp"
            android:gravity="center"
            android:text="@string/defaut"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/supprimer_plat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="686dp"
            android:layout_marginTop="6dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_delete" />

    </RelativeLayout>
    
    

</android.support.v7.widget.CardView>