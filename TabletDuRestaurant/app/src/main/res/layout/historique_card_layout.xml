<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="750dp"
    android:layout_height="40dp"
    android:background="@color/white"
    android:gravity="center"
    android:layout_margin="4dp"
    app:cardUseCompatPadding="false"
    app:cardCornerRadius="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/black">


        <TextView
            android:id="@+id/nom_commande"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="4dp"
            android:gravity="center|start"
            android:text="@string/defaut"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/date_commande"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/nom_commande"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="323dp"
            android:gravity="center"
            android:text="@string/defaut"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/heure_commande"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/nom_commande"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="48dp"
            android:gravity="center"
            android:text="@string/defaut"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/voir_commande"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="716dp"
            android:layout_marginTop="3dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_arrow_details" />

    </RelativeLayout>











</android.support.v7.widget.CardView>